{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "react",
        "compileOnSave" : true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "out"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}